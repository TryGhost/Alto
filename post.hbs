{{!< default}}

<div class="content-area">
  <main class="site-main kg-width-normal">
    {{#post}}
      <article class="{{post_class}}{{#unless feature_image}} no-image{{/unless}} single-post">
        {{> post-header single=true number_date=true}}
        {{> post-media}}
        <div class="post-content u-text-format">
          {{content}}
        </div>
        {{> share}}
      </article>
      {{> author}}
    {{/post}}
    {{> related}}
    {{> disqus}}
  </main>
</div>