{{#get "posts" filter="featured:true" limit="10" include="tags" as |featured|}}
  {{#if featured}}
    <section class="featured-posts carousel owl">
      {{#foreach featured}}
        <article class="{{post_class}}{{#unless feature_image}} no-image{{/unless}}">
          {{> post-media static_image=true small_image=true same_height=true ratio="square" show_tag=true}}
          {{> post-header hide_meta=true}}
        </article>
      {{/foreach}}
    </section>
  {{/if}}
{{/get}}